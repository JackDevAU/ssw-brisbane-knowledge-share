---
interface Props {
    videoUrl: string;
}

const { videoUrl } = Astro.props;
---

<div class="video-wrapper">
    <div class="video-container">
        <div class="video-placeholder">
            <div class="play-button-container">
                <button 
                    onclick={`window.open('${videoUrl}', '_blank')`}
                    class="play-button"
                    aria-label="Watch video on SharePoint"
                >
                    <svg 
                        xmlns="http://www.w3.org/2000/svg" 
                        viewBox="0 0 24 24" 
                        fill="currentColor" 
                        class="play-icon"
                    >
                        <path d="M8 5v14l11-7z" />
                    </svg>
                </button>
            </div>
            <div class="video-info">
                <p class="text-lg font-semibold">Watch on SharePoint</p>
                <p class="text-sm text-gray-500 mt-2">Click to open in a new tab</p>
            </div>
        </div>
    </div>
</div>

<style>
    .video-wrapper {
        @apply max-w-[800px] mx-auto mb-8;
    }

    .video-container {
        @apply relative w-full pt-[56.25%] bg-gray-900 rounded-lg overflow-hidden shadow-lg;
    }

    .video-placeholder {
        @apply absolute inset-0 flex flex-col items-center justify-center text-white;
    }

    .play-button-container {
        @apply mb-4;
    }

    .play-button {
        @apply w-20 h-20 flex items-center justify-center rounded-full bg-white/20 hover:bg-white/30 transition-colors cursor-pointer border-2 border-white/40;
    }

    .play-icon {
        @apply w-10 h-10 text-white;
    }

    .video-info {
        @apply text-center;
    }
</style>
</boltArtifact>