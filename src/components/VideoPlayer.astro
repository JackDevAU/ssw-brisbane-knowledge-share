---
interface Props {
    videoUrl: string;
}

const { videoUrl } = Astro.props;
---

<div class="max-w-3xl mx-auto mb-8">
    <div class="relative w-full bg-gray-100 rounded-lg shadow-lg overflow-hidden pb-[56.25%] flex items-center justify-center">
        <a
            href={videoUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="flex flex-col items-center justify-center bg-black text-white rounded-full w-16 h-16 hover:bg-gray-800 transition duration-300"
            title="Watch Video"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 16 16"
                class="w-6 h-6"
            >
                <path d="M4.5 3.5v9l7-4.5-7-4.5z" />
            </svg>
        </a>
        <p class="mt-2 text-sm text-gray-600">Watch on SharePoint</p>
    </div>
</div>
